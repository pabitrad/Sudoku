                    <Border Style="{StaticResource MiniBorderBlueStyle}" />
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="1"/>
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="2"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="1"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="2"/>

                    <ContentControl Content="{Binding Path=Cell33, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="0" MouseLeftButtonDown="D3_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell43, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="0" MouseLeftButtonDown="E3_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell53, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="0" MouseLeftButtonDown="F3_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell34, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="1" MouseLeftButtonDown="D4_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell44, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="1" MouseLeftButtonDown="E4_MouseLeftButtonDown" />

<Window x:Class="SudokuWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:srcVM="clr-namespace:SudokuWPF.ViewModel"
        xmlns:srcVME="clr-namespace:SudokuWPF.ViewModel.Enums"
        xmlns:srcME="clr-namespace:SudokuWPF.Model.Enums"
        xmlns:srcMS="clr-namespace:SudokuWPF.Model.Structures"
        Title="Sudoku Game"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Closing="Window_Closing" Loaded="OnLoad">

    <Window.Resources>
        <Style x:Key="BorderStyle"
               TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style x:Key="MiniBorderStyle"
               TargetType="Border"
               BasedOn="{StaticResource BorderStyle}">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Grid.ColumnSpan" Value="3" />
            <Setter Property="Grid.RowSpan" Value="3" />
            <Setter Property="Height" Value="134" />
            <Setter Property="Width" Value="134" />
        </Style>

        <Style x:Key="MiniBorderBlueStyle"
               TargetType="Border"
               BasedOn="{StaticResource MiniBorderStyle}">
            <Setter Property="Background" Value="AliceBlue" />
        </Style>

        <Style x:Key="BarBaseStyle"
               TargetType="Rectangle">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Stroke" Value="Gray" />
        </Style>

        <Style x:Key="HorizontalBars"
               TargetType="Rectangle"
               BasedOn="{StaticResource BarBaseStyle}">
            <Setter Property="Grid.ColumnSpan" Value="3"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Width" Value="134" />
        </Style>

        <Style x:Key="VerticalBars"
               TargetType="Rectangle"
               BasedOn="{StaticResource BarBaseStyle}">
            <Setter Property="Grid.RowSpan" Value="3"/>
            <Setter Property="Height" Value="134"/>
            <Setter Property="Width" Value="1" />
        </Style>

        <Style x:Key="ButtonBaseStyle"
               TargetType="ButtonBase">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="CheckboxBaseStyle"
               TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="21" />
            <Setter Property="Width" Value="110" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsEnableGameControls, Mode=OneWay}" Value="True">
                    <Setter Property="IsEnabled" Value="True" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsEnableGameControls, Mode=OneWay}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <ObjectDataProvider x:Key="GameLevels"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="srcME:DifficultyLevels" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="StartButtonStyle"
               TargetType="ButtonBase"               
               BasedOn="{StaticResource ButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=StartButtonState, Mode=OneWay}" Value="Start">
                    <Setter Property="Content" Value="Start Game"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=StartButtonState, Mode=OneWay}" Value="Pause">
                    <Setter Property="Content" Value="Pause Game"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=StartButtonState, Mode=OneWay}" Value="Resume">
                    <Setter Property="Content" Value="Resume Game"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=StartButtonState, Mode=OneWay}" Value="Disable">
                    <Setter Property="Content" Value="Start Game"/>
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableGameButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsEnableGameControls, Mode=OneWay}" Value="True">
                    <Setter Property="IsEnabled" Value="True" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsEnableGameControls, Mode=OneWay}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameGridStyle"
               TargetType="Grid">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="10,10,0,0" />
            <Setter Property="Height" Value="402" />
            <Setter Property="Width" Value="402" />
            <Setter Property="Panel.ZIndex" Value="2" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsShowGameGrid, Mode=OneWay}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsShowGameGrid, Mode=OneWay}" Value="False">
                    <Setter Property="Visibility" Value="Hidden" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyle"
               TargetType="TextBlock">
            <Setter Property="Height" Value="39"/>
            <Setter Property="Margin" Value="5" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Width" Value="34" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="IsEnabled" Value="True" />
            <Setter Property="Visibility" Value="Visible" />
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="Grid.ColumnSpan" Value="3" />
            <Setter Property="Grid.RowSpan" Value="3" />
            <Style.Triggers>
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Background" Value="LightBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NoteCellStyle"
               TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="9" />
            <Setter Property="Visibility" Value="Hidden" />
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Background" Value="LightBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="CellDataTemplate"
                      DataType="{x:Type srcMS:CellClass}">
            <Grid x:Name="CellGrid"
                  Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="Cell" 
                           Style="{StaticResource CellStyle}"/>
                <TextBlock x:Name="Note1"
                           Text="{Binding Path=Notes[0].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBlock x:Name="Note2"
                           Text="{Binding Path=Notes[1].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="1"
                           Grid.Row="0"/>
                <TextBlock x:Name="Note3"
                           Text="{Binding Path=Notes[2].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="2"
                           Grid.Row="0"/>
                <TextBlock x:Name="Note4"
                           Text="{Binding Path=Notes[3].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="0"
                           Grid.Row="1"/>
                <TextBlock x:Name="Note5"
                           Text="{Binding Path=Notes[4].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="1"
                           Grid.Row="1"/>
                <TextBlock x:Name="Note6"
                           Text="{Binding Path=Notes[5].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="2"
                           Grid.Row="1"/>
                <TextBlock x:Name="Note7"
                           Text="{Binding Path=Notes[6].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="0"
                           Grid.Row="2"/>
                <TextBlock x:Name="Note8"
                           Text="{Binding Path=Notes[7].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="1"
                           Grid.Row="2"/>
                <TextBlock x:Name="Note9"
                           Text="{Binding Path=Notes[8].Value, Mode=OneWay}"
                           Style="{StaticResource NoteCellStyle}"
                           Grid.Column="2"
                           Grid.Row="2"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Answer">
                    <Setter Property="Text" Value="{Binding Path=Answer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="IsEnabled" Value="False" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Hint">
                    <Setter Property="Text" Value="{Binding Path=Answer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="BlueViolet" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Blank">
                    <Setter Property="Text" Value=" " TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="UserInputCorrect" >
                    <Setter Property="Text" Value="{Binding Path=UserAnswer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="DarkGreen" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="UserInputIncorrect" >
                    <Setter Property="Text" Value="{Binding Path=UserAnswer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="DarkRed" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Notes">
                    <Setter Property="Margin" Value="5" TargetName="CellGrid" />
                    <Setter Property="Visibility" Value="Hidden" TargetName="Cell" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note1" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note2" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note3" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note4" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note5" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note6" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note7" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note8" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note9" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Canvas Margin="0,0,0,0"            
            Height="570"
            Width="850">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Row="0" Grid.Column="0">
                <Label Content="Let's Play" FontSize="40" FontStyle="Italic"></Label>
                <Label Content="SUDOKU" FontSize="40" FontWeight="Bold"></Label>

                <Grid Width="170" Height="150" Margin="20, 10, 0, 0" ShowGridLines="False" ToggleButton.Click="HandleInputControlButtonClick">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number1}">1</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number2}" Grid.Column="1">2</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number3}" Grid.Column="2">3</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number4}" Grid.Row="1">4</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number5}" Grid.Column="1" Grid.Row="1">5</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number6}" Grid.Column="2" Grid.Row="1">6</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number7}" Grid.Row="2">7</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number8}" Grid.Column="1" Grid.Row="2">8</ToggleButton>
                    <ToggleButton Tag="{x:Static srcME:InputPadStateEnum.Number9}" Grid.Column="2" Grid.Row="2">9</ToggleButton>
                </Grid>
                <ToggleButton 
                    Content="REMOVE"
                    Click="HandleInputControlButtonClick"
                    Style="{StaticResource StartButtonStyle}"
                    Margin="20, 0, 0, 0" 
                    Width="170"
                    Tag="{x:Static srcME:InputPadStateEnum.ClearRaised}"
                    />
                
                <Label Content="INPUT CONTROL" FontWeight="Bold" FontSize="20" Margin="20,20, 0, 0" Foreground="Red"></Label>
                <Label FontWeight="Bold" FontSize="15" Margin="20,0, 0, 0" Foreground="Red" Height="154">
                    <TextBlock Text="To place an input on the game board, click on this panel and then click on the place on the board where you want to place your number" TextWrapping="Wrap" ></TextBlock>
                </Label>
            </WrapPanel>
            
            <Grid  Grid.Row="0" Grid.Column="1" Style="{StaticResource GameGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                  Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource MiniBorderBlueStyle}" />
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="1"/>
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="2"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="1"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="2"/>

                    <ContentControl Content="{Binding Path=Cell00, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="0" MouseLeftButtonDown="A0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell10, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="0" MouseLeftButtonDown="B0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell20, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="0" MouseLeftButtonDown="C0_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell01, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="1" MouseLeftButtonDown="A1_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell11, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="1" MouseLeftButtonDown="B1_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell21, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="1" MouseLeftButtonDown="C1_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell02, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="2" MouseLeftButtonDown="A2_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell12, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="2" MouseLeftButtonDown="B2_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell13, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="0" MouseLeftButtonDown="B3_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell23, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="0" MouseLeftButtonDown="C3_MouseLeftButtonDown" />


                    <ContentControl Content="{Binding Path=Cell71, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="1" MouseLeftButtonDown="H1_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell81, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="1" MouseLeftButtonDown="I1_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell62, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="2" MouseLeftButtonDown="G2_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell72, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="2" MouseLeftButtonDown="H2_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell82, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="2" MouseLeftButtonDown="I2_MouseLeftButtonDown" />
                </Grid>

                <Grid Grid.Row="1"
                  Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource MiniBorderStyle}" />
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="1"/>
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="2"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="1"/>

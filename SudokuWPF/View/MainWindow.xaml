                    <ContentControl Content="{Binding Path=Cell35, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="2" MouseLeftButtonDown="D5_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell45, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="2" MouseLeftButtonDown="E5_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell55, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="2" MouseLeftButtonDown="F5_MouseLeftButtonDown" />
                </Grid>

                <Grid Grid.Row="1"
                  Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>

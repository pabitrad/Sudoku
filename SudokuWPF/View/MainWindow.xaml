                </Grid>

                <Grid Grid.Row="0"
                  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource MiniBorderStyle}" />
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="1"/>
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="2"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="1"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="2"/>

                    <ContentControl Content="{Binding Path=Cell30, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="0" MouseLeftButtonDown="D0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell40, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="0" MouseLeftButtonDown="E0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell50, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="0" MouseLeftButtonDown="F0_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell31, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="1" MouseLeftButtonDown="D1_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell41, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="1" MouseLeftButtonDown="E1_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell51, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="1" MouseLeftButtonDown="F1_MouseLeftButtonDown" />

                    <ContentControl Content="{Binding Path=Cell32, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="2" MouseLeftButtonDown="D2_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell42, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="2" MouseLeftButtonDown="E2_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell52, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="2" MouseLeftButtonDown="F2_MouseLeftButtonDown" />

                </Grid>

                <Grid Grid.Row="0"
                  Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource MiniBorderBlueStyle}" />
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="1"/>
                    <Rectangle Style="{StaticResource HorizontalBars}" Grid.Row="2"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="1"/>
                    <Rectangle Style="{StaticResource VerticalBars}" Grid.Column="2"/>

                    <ContentControl Content="{Binding Path=Cell60, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="0" Grid.Row="0" MouseLeftButtonDown="G0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell70, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="1" Grid.Row="0" MouseLeftButtonDown="H0_MouseLeftButtonDown" />
                    <ContentControl Content="{Binding Path=Cell80, Mode=OneWay}" ContentTemplate="{StaticResource CellDataTemplate}" Grid.Column="2" Grid.Row="0" MouseLeftButtonDown="I0_MouseLeftButtonDown" />

